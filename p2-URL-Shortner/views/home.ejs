<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
</head>
<body>
    <div>
        <h1>Welcome to URL Shortner</h1>
    </div>
    <div>
        <% if (locals.id) { %>
         <p>Short URL created succesfully, your short url is <a href=http://localhost:8000/url/<%= id %> >http://localhost:8000/url/<%= id %></a></p>
        <% } %>
    </div>
    <div>
        <form method="POST" action="/url">
            <label for="url">Enter orignal URL here</label>
            <Input type="text" name="url" placeholder="https://example.com"></Input>
            <button type="submit">Convert</button>
        </form>
    </div>
    <div>
        <% if (locals.allUrls) { %>
            <table>
                <thead>
                    <th>S.no.</th>
                    <th>Short Link</th>
                    <th>Org. Link</th>
                    <th>Total clicks</th>
                </thead>
                <tbody>
                    <% allUrls.forEach((url, index) => { %>
                     <tr>
                        <td><%= index + 1 %></td>
                        <td><%= url.shortId %></td>
                        <td><%= url.redirectURL %></td>
                        <td><%= url.visitHistory.length %></td>
                     </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>
    </div>
</body>
</html>